<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 (반투명 흰색) -->
    <solid android:color="#CCFFFFFF"/>

    <!-- 둥근 모서리 -->
    <corners android:radius="8dp"/>

    <!-- 테두리 (선택 사항) -->
    <stroke
        android:width="1dp"
        android:color="#80CCCCCC"/>

    <!-- 내부 패딩 (선택 옵션) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
