<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- 1) 위치 -->
    <TextView
        android:id="@+id/tv_widget_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위치: 알 수 없음"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <!-- 2) 시간 -->
    <TextView
        android:id="@+id/tv_widget_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시간: --:--"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <!-- 3) 날씨 아이콘 + 현재 기온 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- ★ 아이콘 크기 80dp 로 줄임 -->
        <ImageView
            android:id="@+id/iv_widget_weather_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="날씨 아이콘"/>

        <TextView
            android:id="@+id/tv_widget_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="--°C"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- 4) 오늘 최고/최저 기온 -->
    <TextView
        android:id="@+id/tv_widget_high_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="--°C/--°C"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <!-- 5) 새로고침 버튼 -->
    <ImageButton
        android:id="@+id/btn_widget_refresh"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_refresh"
        android:tint="@android:color/black"
        android:contentDescription="새로고침"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/tv_widget_test_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/holo_blue_dark"
        android:padding="4dp"
        android:text="▶ 테스트 알림"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:gravity="center" />
</LinearLayout>
