<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_widget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--°C"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_widget_high_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_temp"
        android:layout_marginTop="4dp"
        android:text="--°C/--°C"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_widget_cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_widget_high_low"
        android:layout_marginTop="4dp"
        android:text="맑음"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/btn_widget_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:src="@drawable/ic_refresh"
        android:contentDescription="새로고침"/>
</FrameLayout>
